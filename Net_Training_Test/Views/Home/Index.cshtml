@model IEnumerable<Net_Training_Test.Models.Person>

@{
    ViewBag.Title = "Notebook";
}
<h2>Notebook</h2>

@using (Html.BeginForm("Index", "Home", FormMethod.Post))
{
    <div class="form-horizontal">

        <fieldset>
            <legend>Search </legend>
            <div class="form-group">
                <label class="control-label col-md-2" for="Surname">by Surname</label>
                <div class="col-md-10">
                    @Html.Editor("Surname", new { htmlAttributes = new { @class = "form-control text-box single-line" } })
                </div>

            </div>
            <div class="form-group">
                <label class="control-label col-md-2" for="Name">by Name</label>
                <div class="col-md-10">
                    @Html.Editor("Name", new { htmlAttributes = new { @class = "form-control  text-box single-line" } })
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-2" for="Phone">by Phone</label>
                <div class="col-md-10">
                    @Html.Editor("Phone", new { htmlAttributes = new { @class = "form-control  text-box single-line" } })
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-2" for="SurName"></label>
                <div class="col-md-10">
                    <input type="submit" value="Search" class="btn btn-default" />
                </div>
            </div>
        </fieldset>
    </div>
}

<p>
    @Html.ActionLink("Create new person", "create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.ActionLink("Surname", "Index", new { sort = 1 })

        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.ActionLink("Year of Born", "Index", new { sort = 2 })
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Phone)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Surname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.YearBorn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                @Html.ActionLink("Edit", "edit", new { id = item.Id }) |
                @Html.ActionLink("Delete", "delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
